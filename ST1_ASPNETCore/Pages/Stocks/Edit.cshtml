@page
@model ST1_ASPNETCore.Pages.Stocks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Stock.ID" />
            <div class="form-group">
                <label asp-for="Stock.Fecha" class="control-label"></label>
                <input asp-for="Stock.Fecha" class="form-control" />
                <span asp-validation-for="Stock.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.Sucursal" class="control-label"></label>
                <input asp-for="Stock.Sucursal" class="form-control" />
                <span asp-validation-for="Stock.Sucursal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.Producto" class="control-label"></label>
                <input asp-for="Stock.Producto" class="form-control" />
                <span asp-validation-for="Stock.Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.Descripcion" class="control-label"></label>
                <input asp-for="Stock.Descripcion" class="form-control" />
                <span asp-validation-for="Stock.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.Kilos" class="control-label"></label>
                <input asp-for="Stock.Kilos" class="form-control" />
                <span asp-validation-for="Stock.Kilos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
